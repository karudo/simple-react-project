{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": ["error", "never"],
    "one-var": ["error", {
      "const": "never"
    }],
    "object-curly-spacing": ["error", "never"],
    "arrow-body-style": [0],
    "max-len": ["warn", 200],
    "brace-style": ["error", "stroustrup"],
    "object-shorthand": [0],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "no-console": [0],
    "global-require": [0],
    "react/prefer-stateless-function": [1]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "__VERSION__": false
  }
}
